<div class="banner">
  <h1>Info on <%=@cocktail.name %></h1>
</div>
<div class="wrapper">
  <div class="row">
    <div class="col-xs-12 col-sm-3 col-sm-offset-4">
      <div class="ingredient-text">
        <p>List of ingredients</p>
        <ul>
          <%=@cocktail.doses.each do |dose| %>
            <li><%=dose.description%> - <%=dose.ingredient.name%>  | <%= link_to "Delete", dose_path(@cocktail)%> |  </li>
            <%end%>
        <ul>
      </div>
        <div class="ingredient-photo">
          <p>Ingredient Photo</p>
          <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
        </div>
      </div>
    </div>
  </div>
</div>
<p><%= link_to "Back to all cocktails", cocktails_path, class: 'btn btn-success' %></p>
<p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-success' %></p>


