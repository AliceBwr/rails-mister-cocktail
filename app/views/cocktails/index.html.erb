<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center">List of Cocktails</h1>
      <% @cocktails.each do |ct| %>
        <%= link_to cocktail_path(ct) do %>
          <div class="cocktail",>
            <h3><%= ct.name %></h3>
          </div>
        <% end %>
        <% end %>
        <p><%= link_to "Add a new cocktail", new_cocktail_path, class: 'btn btn-success' %></p>
    </div>
  </div>
</div>

