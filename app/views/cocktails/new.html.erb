<div class="banner">
  <h1>Add a new cocktail</h1>
</div>
<div class="cocktail-form">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    <%= simple_form_for (@cocktail) do |f| %>
    <%= f.input :name%>
    <%= f.input :photo%>
    <%= f.input :photo_cache, as: :hidden%>
    <%= f.submit "Add a cocktail", class: "btn btn-primary" %>
    <% end %>
    <p><%= link_to "Back to all cocktails", cocktails_path, class: 'btn btn-success' %></p>
  </div>
</div>

